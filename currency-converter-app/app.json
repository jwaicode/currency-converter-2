{
  "expo": {
    "name": "Personal Currency Converter",
    "slug": "currency-converter-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-manifests",
        {
          "name": "Personal Currency Converter",
          "short_name": "CurrencyConv",
          "description": "Quick currency conversion for travelers",
          "start_url": "/",
          "display": "standalone",
          "theme_color": "#000000",
          "background_color": "#ffffff"
        }
      ]
    ]
  }
}